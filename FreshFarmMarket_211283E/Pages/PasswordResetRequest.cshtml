@page
@model FreshFarmMarket_211283E.Pages.PasswordResetRequestModel
@{
}

<div class="card text-center" style="width: 60%; margin: auto;">
    <div class="card-header h5 text-white bg-primary">Password Reset</div>
    <div class="card-body px-5">
        <p class="card-text py-2">
            Enter your email address and we'll send you an SMS to your phone number with instructions to reset your password.
        </p>
        <form method="POST">
            <div class="form-outline">
                <input type="email" id="typeEmail" class="form-control my-3" asp-for="Email" placeholder="Enter your email address"/>
            </div>
            <button type="submit" class="btn btn-primary w-100">Reset password</button>
            <div class="d-flex justify-content-between mt-4">
                <a class="" href="/Login">Login</a>
                <a class="" href="/Register">Register</a>
            </div>
        </form>
    </div>
</div>