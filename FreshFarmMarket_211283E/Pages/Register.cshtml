@page
@model FreshFarmMarket_211283E.Pages.RegisterModel
@{
}

<section class="h-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col">
                <div class="card card-registration my-4">
                    <div class="row g-0">
                        <div class="col-xl-6 d-none d-xl-block">
                            <img src="https://img.freepik.com/premium-vector/farmers-organic-marketfemale-farmer-selling-fresh-vegetables-stall-local-food-market-place-flat-vector-illustration-isolated-white-background-eps10_697732-163.jpg?w=2000"
                                    alt="Sample photo" class="img-fluid"
                                    style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;" />
                        </div>

                        <div class="col-xl-6">
                            <div class="card-body p-md-5 text-black">
                                <h3 class="mb-5 text-uppercase"> registration form</h3>
                                <form method="post" enctype="multipart/form-data">
                                    <div asp-validation-summary="All" class="text-danger"></div>

                                    <div class="form-outline mb-4">
                                        <div class="form-outline">
                                            <label class="form-label" asp-for="Upload">Photo</label>
                                            <input type="file" accept="image/*" asp-for="Upload" class="form-control" onchange="showImgPreview(this)" />
                                            <span asp-validation-for="Upload" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <div class="form-outline">
                                            <label class="form-label" asp-for="RModel.FullName">Full Name</label>
                                            <input type="Text" asp-for="RModel.FullName" class="form-control" />
                                            <span asp-validaton-for="RModel.FullName"></span>
                                        </div>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <div class="form-outline">
                                            <label class="form-label" asp-for="RModel.Gender">Gender</label><br />
                                            <div class="form-check form-check-inline mb-0 me-4">
                                                <input type="radio" asp-for="RModel.Gender" value="male" /> Male
                                            </div>
                                            <div class="form-check form-check-inline mb-0 me-4">
                                                <input type="radio" asp-for="RModel.Gender" value="female" /> Female
                                            </div>

                                            <span asp-validaton-for="RModel.Gender" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline">
                                                <label class="form-label" asp-for="RModel.EmailAddress">Email Address</label>
                                                <input type="Text" asp-for="RModel.EmailAddress" class="form-control" />
                                                <span asp-validaton-for="RModel.EmailAddress" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline">
                                                <label class="form-label" asp-for="RModel.PhoneNumber">Phone Number</label>
                                                <input type="Text" asp-for="RModel.PhoneNumber" class="form-control" />
                                                <span asp-validaton-for="RModel.PhoneNumber" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <div class="form-outline">
                                            <label class="form-label" asp-for="RModel.Password">Password</label>
                                            <input type="Text" asp-for="RModel.Password" class="form-control" />
                                            <span asp-validaton-for="RModel.Password" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <div class="form-outline">
                                            <label class="form-label" asp-for="RModel.ConfirmPassword">Confirm Password</label>
                                            <input type="Text" asp-for="RModel.ConfirmPassword" class="form-control" />
                                            <span asp-validaton-for="RModel.ConfirmPassword" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <div class="form-outline">
                                            <label class="form-label" asp-for="RModel.DeliveryAddress">Delivery Address</label>
                                            <input type="Text" asp-for="RModel.DeliveryAddress" class="form-control" />
                                            <span asp-validaton-for="RModel.DeliveryAddress" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <div class="form-outline">
                                            <label class="form-label" asp-for="RModel.CreditCardNumber">Credit Card Number</label>
                                            <input type="text" asp-for="RModel.CreditCardNumber" class="form-control" />
                                            <span asp-validaton-for="RModel.CreditCardNumber" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <div class="form-outline">
                                            <label class="form-label" asp-for="RModel.AboutMe">About Me</label>
                                            <textarea type="text" asp-for="RModel.AboutMe" class="form-control"></textarea>
                                            <span asp-validaton-for="RModel.AboutMe" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-end pt-3">
                                        <button type="submit" class="btn btn-primary">Sign Up</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>